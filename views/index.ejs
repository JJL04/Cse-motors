<section class="hero">
  <div class="hero-inner container">
    <div class="hero-text">
      <h2>Drive the future</h2>
      <p>Quality pre-owned and new vehicles. Great service. Honest pricing.</p>
      <a class="btn" href="#inventory">View Inventory</a>
    </div>
    <div class="hero-image">
      <img src="/images/banner.svg" alt="CSE Motors banner">
    </div>
  </div>
</section>

<section id="inventory" class="container inventory">
  <h3>Featured Vehicles</h3>
  <div class="grid">
    <article class="card">
      <img src="/images/car1.svg" alt="Car 1">
      <h4>2018 Compact Sedan</h4>
      <p>Reliable, efficient, and inspected.</p>
    </article>
    <article class="card">
      <img src="/images/car1.svg" alt="Car 2">
      <h4>2020 SUV</h4>
      <p>Spacious and family friendly.</p>
    </article>
    <article class="card">
      <img src="/images/car1.svg" alt="Car 3">
      <h4>2019 Coupe</h4>
      <p>Sporty handling and stylish design.</p>
    </article>
  </div>
</section>

<section id="about" class="container about">
  <h3>About CSE Motors</h3>
  <p>Family-owned dealership providing quality vehicles and transparent service.</p>
</section>

<section id="contact" class="container contact">
  <h3>Contact Us</h3>
  <% if(typeof errors !== 'undefined' && errors){ %>
    <div class="errors" role="alert">
      <ul>
        <% errors.forEach(function(e){ %>
          <li><%= e %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <% if(typeof success !== 'undefined'){ %>
    <div class="success" role="status"><%= success %></div>
  <% } %>

  <form action="/inquiry" method="post" novalidate>
    <label for="name">Name</label>
    <input id="name" name="name" type="text" value="<%= form && form.name ? form.name : '' %>" required>

    <label for="email">Email</label>
    <input id="email" name="email" type="email" value="<%= form && form.email ? form.email : '' %>" required>

    <label for="message">Message</label>
    <textarea id="message" name="message" required><%= form && form.message ? form.message : '' %></textarea>

    <button class="btn" type="submit">Send Inquiry</button>
  </form>
</section>
